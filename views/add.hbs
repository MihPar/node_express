<h1>Добавить новый курс</h1>

<form action="/add" methos="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required>
        <label for="title">Название курсв</label>
        <span class="helper-text" data-error="Введите название">Helper text</span>
    </div>
    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min="1">
        <label for="price">Цена</label>
        <span class="helper-text" data-error="Введите цену">Helper text</span>
    </div>
    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required>
        <label for="img">Картинка</label>
        <span class="helper-text" data-error="Введите url-картинки">Helper text</span>
    </div>
     <button class="btn bnt-primary">Добавить курсы</button>
</form>